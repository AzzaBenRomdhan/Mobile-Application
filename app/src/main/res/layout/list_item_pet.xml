<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/imageView32"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/pet1"
        android:layout_marginEnd="16dp" />

    <TextView
        android:id="@+id/textViewPetName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/imageView32"
        android:text=""
        android:textSize="18sp"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/textViewBreed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewPetName"
        android:layout_marginTop="4dp"
        android:layout_toEndOf="@id/imageView32"
        android:text=""
        android:textColor="#808080"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_below="@id/textViewBreed"
        android:background="@color/grix"
        android:fontFamily="@font/fredoka_one"
        android:gravity="center"
        android:text=""
        android:textColor="#FF000000" />

    <ListView
        android:id="@+id/listViewPets"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Vous pouvez ajouter d'autres éléments ici selon vos besoins -->

</RelativeLayout>
